<div class= "container-fluid" >
  <div id="first">
    <div class="header container">
      <%= render 'contacts/linkto' %>
    </div>
  </div>
<div class="form-group">
  <h3>Contact Toccata Nosferatu</h3>

  <%=form_for @contact,:html => {:class => 'form-group' } do |f| %>
    <%= f.label :name, 'Your Name: ' %>
    <%= f.text_field :name, :required => true, :class => 'form-control' %>
    <%= f.label :email, "Email: " %>
    <%= f.text_field :email, :required => true, :class => 'form-control'   %>
    <%= f.label :message, "Message: " %>
    <%= f.text_area :message, :as => :text, :required => true, :class => 'form-control'  %>
    <div>
      </br>

      <%= f.submit "Send" %>
    </div>
  <% end %>
</div>
</div>
