<a name="news"></a>
<div class="news">
<div id="newshead">
   <% if logged_in? %>
     <%= link_to image_tag("News.png"), "/news" , :method => :get%>
   <% else %>
     <%= image_tag("News.png") %>
   <% end %>
</div>

<div class="newsbox">
   <% @newsfeed.reverse_each do |report| %>
     <div class ="news-divs">
       <h4 style="color: #912121 "><%= report.title %>: </h4>
       <h4 style=" padding-left: 1%"><%= report.text %> </h4>
       <h6 style="text-align: center"><%= report.created_at %></h6>
     </div>
   <% end %>
</div>
</div>
