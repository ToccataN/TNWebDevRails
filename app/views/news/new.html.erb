<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:news, url: news_path) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :text %>
      <%= f.text_area :text, class: 'form-control' %>

      <%= f.submit "News!", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
